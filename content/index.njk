        <h3>{{ post.data.date.toLocaleDateString('en-GB',{ weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) }}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Reading time:&nbsp;{{ post.data.readingtime }}</h3>
		<p class="blog-post-summary">
        {{ post.data.summary | safe }}
		</p>

        {{ post.templateContent | safe }}

	</section>
</div>
{% endfor %}

